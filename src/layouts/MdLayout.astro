---
import type { MarkdownLayoutProps } from 'astro'
import Layout from './Layout.astro'
type Props = MarkdownLayoutProps<{
  title: string
  description: string
}>
const { title, description } = Astro.props.frontmatter
---

<Layout title={`${title}｜カルシウム学習サイト`} description={description}>
  <main>
    <slot />
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
</style>
